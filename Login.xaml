<Window x:Class="Proga.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="300" Width="300">
    <Grid>
        <TextBox Height="23" HorizontalAlignment="Left" Margin="146,55,0,0" x:Name="UsernameBox" VerticalAlignment="Top" Width="120" />
        <PasswordBox Height="23" HorizontalAlignment="Left" Margin="146,105,0,0" x:Name="PasswordBox" VerticalAlignment="Top" Width="120" />
        <Label Content="Username" Height="26" HorizontalAlignment="Left" Margin="146,34,0,0" x:Name="Username" VerticalAlignment="Top" />
        <Label Content="Password" Height="28" HorizontalAlignment="Left" Margin="146,84,0,0" x:Name="Password" VerticalAlignment="Top" />
        <Button Content="Log in" Height="23" HorizontalAlignment="Left" Margin="146,149,0,0" x:Name="LoginB" VerticalAlignment="Top" Width="120" Click="button1_Click" />
        <Label Content="Wrong data" Height="28" HorizontalAlignment="Left" Margin="146,122,0,0" x:Name="Error" VerticalAlignment="Top" Width="120" Foreground="Red" Visibility="Hidden" />
    </Grid>
</Window>
